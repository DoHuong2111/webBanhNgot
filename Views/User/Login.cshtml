
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form class="login100-form validate-form" action="CheckLogin" method="POST">
    <span class="login100-form-title p-b-37">
        Sign In
    </span>

    <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
        <input class="input100" type="text" name="us" placeholder="username or email">
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
        <input class="input100" type="password" name="mk" placeholder="password">
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Sign In
        </button>
    </div>
    <br />
    <div> @TempData["msg"]</div>
    <br />
    
</form>
	
